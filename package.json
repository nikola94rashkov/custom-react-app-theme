		"git-cz": "^4.9.0",
		"prettier-plugin-organize-imports": "^3.2.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-loader": "^9.5.1",
		"typescript": "*"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/preset-env": "^7.23.8",
		"@babel/preset-react": "^7.23.3",
		"@testing-library/jest-dom": "^6.2.0",
		"@testing-library/react": "^14.1.2",
		"@types/copy-webpack-plugin": "^10.1.0",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"babel-loader": "^9.1.3",
		"copy-webpack-plugin": "^12.0.2",
		"css-loader": "^6.9.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^27.6.3",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.33.2",
		"html-webpack-plugin": "^5.6.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.2.4",
		"sass": "^1.70.0",
		"sass-loader": "^14.0.0",
		"style-loader": "^3.3.4",
		"ts-node": "^10.9.2",
		"url-loader": "^4.1.1",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1",
		"babel-preset-react-app": "^10.0.0",
		"react-app-polyfill": "^3.0.0",
		"react-test-renderer": "^18.2.0",
		"babel-jest": "^29.7.0",
		"@testing-library/user-event": "^14.5.2",
		"jest-circus": "29.7.0",
		"jest-resolve": "27.7.0",
		"jest-watch-typeahead": "2.2.2"
	},
	"scripts": {
		"dev": "webpack serve --mode development",
		"build": "webpack --mode production",
		"lint:fix": "eslint --fix",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}' --config ./.prettierrc.json",
		"lint:fix-imports": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
		"test": "jest --testPathPattern=src/.*\\.test\\.tsx$",
		"coverage": "jest --coverage --testPathPattern=src",
		"watch": "jest --watch"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"jest": {
		"verbose": true,
		"collectCoverage": true,
		"coverageProvider": "v8",
		"coveragePathIgnorePatterns": [
			"index.tsx"
		],
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}"
		],
		"coverageDirectory": "coverage",
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.ts"
		],
		"watchPlugins": [
			"jest-watch-typeahead/filename",
			"jest-watch-typeahead/testname"
		]
	}
}
